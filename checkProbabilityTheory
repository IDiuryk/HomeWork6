function checkProbabilityTheory(count) {
    let evenCount = 0; // Оголошення змінної для підрахунку парних чисел
    let oddCount = 0; // Оголошення змінної для підрахунку непарних чисел

    for (let i = 0; i < count; i++) {  // Генерація випадкового числа від 100 до 1000 включно
        let randomNumber = Math.floor(Math.random() * (1000 - 100 + 1)) + 100; // Перевірка, чи є число парним
        if (randomNumber % 2 === 0) {
            evenCount++; // Підрахунок парних чисел
        } else {
            oddCount++; // Підрахунок непарних чисел
        }
    }

    const evenPercentage = (evenCount / count * 100).toFixed(2); // Відсоток парних чисел
    const oddPercentage = (oddCount / count * 100).toFixed(2); // Відсоток непарних чисел

    console.log(`Кількість згенерованих чисел: ${count}`);
    console.log(`Парних чисел: ${evenCount}`);
    console.log(`Непарних чисел: ${oddCount}`);
    console.log(`Відсоток парних до непарних: ${evenPercentage}% до ${oddPercentage}%`);
}

// count = 100
checkProbabilityTheory(100);

    console.log(`Кількість згенерованих чисел: ${count}`); // 100 знегерованих чисел
    console.log(`Парних чисел: ${evenCount}`); // 48 парних чисел
    console.log(`Непарних чисел: ${oddCount}`); // 52 непарних чисел
    console.log(`Відсоток парних до непарних: ${evenPercentage}% до ${oddPercentage}%`); // відсоток парних до непарних 48.00% до 52.00%
}
